{
  "name": "resume",
  "version": "0.1.0",
  "config": {
    "port": 3444
  },
  "description": "Berkin Berkcan Çırak's Resume",
  "scripts": {
    "clean": "rm -rf dist/*",
    "copy": "cp src/index.html dist/ && touch dist/.nojekyll",
    "build-client": "npm-run-all -s clean build-prod -p server build-pdf",
    "build-prod": "webpack -p --progress",
    "build-pdf": "wait-on http://localhost:$npm_package_config_port/ && wkhtmltopdf  --print-media-type  --dpi 300 -L 0 -R 0 -T 0 -B 0  http://localhost:$npm_package_config_port dist/resume.pdf",
    "start": "npm-run-all -s clean build-prod -p server build-pdf",
    "watch": "webpack --watch --inline --hot",
    "server": "wait-on dist/server.js && cd dist && node server",
    "start:dev": "npm-run-all -p clean watch server"
  },
  "author": "berkin",
  "license": "MIT",
  "dependencies": {
    "express": "^4.14.1",
    "hjson": "^2.4.1",
    "marked": "^0.3.6",
    "purecss": "^0.6.2",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-inlinesvg": "^0.5.5"
  },
  "devDependencies": {
    "autoprefixer": "^6.6.1",
    "babel": "^6.5.2",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "concurrently": "^3.3.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.0",
    "hjson": "^1.7.4",
    "hjson-loader": "^1.0.0",
    "ignore-loader": "^0.1.2",
    "image-webpack-loader": "^3.2.0",
    "node-sass": "^3.13.1",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "svg-react-loader": "^0.3.7",
    "wait-on": "^2.0.2",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-node-externals": "^1.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berkin/resume.git"
  },
  "keywords": [
    "resume"
  ],
  "bugs": {
    "url": "https://github.com/berkin/resume/issues"
  },
  "homepage": "https://github.com/berkin/resume#readme"
}
